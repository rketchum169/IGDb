<% @games.each do |game| %>
    <div class="game-card">
    <p>
    <%= game.title %>
    -
    <%= link_to("View Info.", game_path(game.id))%>
    -
    <%= link_to("edit", edit_game_path(game.id))%>
    -
    <%= link_to("delete", game_path(game.id), method: :delete, data: {confirm: "Are you really sure you want to delete this game?"}) %>
    </p>
    </div>
<% end %>